extends layout

block variables
    - var title = "Gruppen"

block breadcrumbs
    li.breadcrumb-item
        a(href="/") Home
    li.breadcrumb-item
        a(href="/user/") Dashboard
    li.breadcrumb-item.active(aria-current="page") Gruppen

block content
    .container-fluid.bg-light.py-4
        h2 Gruppen
        .card-deck.mx-auto
            each userGroup in userGroups
                .col-md
                    .card
                        .card-body
                            h5.card-title #{userGroup.group.name}
                            p.card-subtitle #{userGroup.points} Punkte und #{userGroup.karma} Ehre